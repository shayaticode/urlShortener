<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL Shortener</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h1>URL Shortener</h1>
            </div>
        </div>
        <form action="/create" method="POST">
           <div class="row">
                 <div class="input-group mb-3">
                    <input type="text" name="longurl" class="form-control" placeholder="Paste here long URL" aria-label="Recipient's username" aria-describedby="basic-addon2">
                    <div class="input-group-append">
                      <input type="submit" class="btn btn-outline-secondary" value="Submit">
                    </div>
                  </div>
            </div>
    </form>
        
        <div class="row">
          <% for(let i=0; i< urlResult.length; i++) { %>
            <div class="col-lg-3">
                <div class="card text-white bg-secondary mb-3" style="max-width: 18rem;">
                    <div class="card-header">Total Click : <%= urlResult[i].clickCount %></div>
                    <div class="card-body">
                      <h6 class="card-title">
                        <a href="http://localhost:8000/<%= urlResult[i].shortUrl %>" target = "_blank">http://localhost:8000/<%= urlResult[i].shortUrl %></a>
                      </h6>
                      <p class="card-text"><%= urlResult[i].longUrl %></p>
                      <a href="/delete/<%= urlResult[i].id %>" class="btn btn-sm btn-danger">Remove</a>
                    </div>
                  </div>
            </div>
            <% } %>
        </div>
    </div>
</body>
</html>